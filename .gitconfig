[user]
	name = Juan Garnica
	email = jupegarnica@gmail.com

[alias]
    chm = checkout master
    chd = checkout dev
    pum = pull upstream master
    pud = pull upstream dev
    s   = status

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = auto

[core]
    editor = atom -w
    excludesfile = ~/.gitignore
    quotepath = false

[difftool]
    prompt = false

[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[diff]
    tool = Kaleidoscope
